# Server
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Postgres
DATABASE_URL=postgresql://username:password@localhost:5432/echo

# Redis
REDIS_URL=redis://localhost:6379

# Encryption / auth
JWT_SECRET=replace_with_strong_random_secret
ENCRYPTION_KEY_BASE64=replace_with_32_bytes_base64
KEY_ID=local-key-1

# Google OAuth (Gmail POC)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
GOOGLE_ALLOWED_EMAIL_DOMAIN=

# Gmail polling
GMAIL_POLL_INTERVAL_MS=45000
GMAIL_MAX_MESSAGES_PER_CYCLE=20

# LLM
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
LLM_PROVIDER=openai

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Web origins
WEB_APP_BASE_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000
